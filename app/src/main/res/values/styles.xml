<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Profile screen styles -->
    <style name="profileAttributes">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profileAttributesText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="profileName">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="profileAdminName">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="cornerSize">50%</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.31</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.Theme.PaleSoccerFieldAdmin.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>

</resources>